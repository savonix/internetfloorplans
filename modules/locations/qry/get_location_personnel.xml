<query name="get_all_personnel">
    <connection>uplink</connection>
    <params>
		<param name="_get/location_address_id" type="text" />
        <param name="//last_database_update" type="text"/>
        <param name="//last_database_update" type="text"/>
		<param name="php:$_SESSION['NX_AUTH']['employer_id']" type="text"/>
	</params>
	<sql>
        SELECT uplink_user_location.user_id, auth_user.user_name
		FROM uplink_user_location, auth_user
		WHERE uplink_user_location.location_address_id=?
		AND uplink_user_location.deletion_datetime &gt; ?
		AND auth_user.user_id = uplink_user_location.user_id
		AND auth_user.deletion_datetime &gt; ?
		AND auth_user.employer_id=?
    </sql>
</query>
