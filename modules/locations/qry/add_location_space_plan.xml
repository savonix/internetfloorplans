<query name="add_location_space_plan">
    <connection>uplink</connection>
    <params>
	<param name="php:$_SESSION['NX_AUTH']['account_id']" type="text"/>
	<param name="_post/name" type="text" default="Plan"/>
        <param name="_post/location_address_id" type="text"/>
        <param name="_post/default" type="text" default="1"/>
	<param name="//bitmap_filename" type="text"/>
	<param name="_post/comments" type="text" default=" "/>
        <param name="//right_now" type="text"/>
    </params>
    <sql>
        INSERT INTO uplink_location_space_plan
		(location_space_plan_id,account_id,name,location_address_id,default_space_plan,space_plan_pointer,
		comments,creation_datetime,display_eqp_icons) 
		VALUES (_AUTO_,?,?,?,?,?,?,?,'checked')
    </sql>
</query>
