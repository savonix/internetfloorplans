<query name="add_location_hours">
    <connection>uplink</connection>
    <params>
        <param name="//_post/location_address_id" type="integer" />
		<param name="//open_iso_time" type="time"/>
		<param name="//close_iso_time" type="time"/>
		<param name="//right_now" type="text" />
		<param name="php:$_SESSION['NX_AUTH']['account_id']" type="text"/>
		<param name="//_post/day_id" type="text" default="0"/>
    </params>
    <sql>
		INSERT INTO uplink_location_hours 
        (location_hours_id,location_address_id,open_time,close_time,creation_datetime,account_id,day_id) 
        VALUES 
        (_AUTO_,?,?,?,?,?,?)
	</sql>
</query>
