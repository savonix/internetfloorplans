<query name="del_location_hours">
    <connection>uplink</connection>
    <params>
        <param name="php:date('Y-m-d H:i:s', mktime(date('H'), date('i'), date('s')-1, date('m'), date('d'), date('Y')))" type="text"/>
        <param name="//_post/location_address_id" type="integer" />
		<param name="php:$_SESSION['NX_AUTH']['account_id']" type="text"/>
		<param name="//last_database_update" type="text"/>
        <param name="//day_id" type="integer" />
    </params>
    <sql>
		UPDATE uplink_location_hours SET deletion_datetime = ?
		WHERE location_address_id= ?
		AND account_id = ? AND deletion_datetime &gt; ?
		AND day_id = ?
	</sql>
</query>
