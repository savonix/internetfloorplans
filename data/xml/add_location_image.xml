<query name="add_location_image">
    <connection>uplink</connection>
    <params>
		<param name="php:$_SESSION['NX_AUTH']['account_id']" type="text"/>
		<param name="_post/name" type="text"/>
        <param name="_post/location_address_id" type="text"/>
		<param name="_post/default" type="text"/>
		<param name="php:$_POST['prefix'].'_'.$_FILES['file']['name']" type="text"/>
		<param name="//thumbname" type="text"/>
		<param name="_files/file/type" type="text"/>
		<param name="_post/comments" type="text"/>
        <param name="//right_now" type="text"/>
		<param name="//width" type="text"/>
		<param name="//height" type="text"/>
    </params>
    <sql>
        INSERT INTO uplink_location_images
		(location_image_id,account_id,name,location_address_id,default_image, image_pointer,thumb_pointer,mime_type,comments, creation_datetime,width,height) 
		VALUES (_AUTO_,?,?,?,?,?,?,?,?,?,?,?)
    </sql>
</query>
