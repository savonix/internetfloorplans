<!DOCTYPE query SYSTEM "__default_table_names__.txt">
<query name="new_location">
    <connection>uplink</connection>
    <params>
	<param name="php:$_SESSION['NX_AUTH']['account_id']" type="text"/>
        <param name="_post/location_name" type="text"/>
        <param name="_post/address_line_1" type="text"/>
        <param name="_post/address_line_2" type="text"/>
        <param name="_post/city" type="text"/>
        <param name="_post/state" type="text" default="0"/>
        <param name="_post/zip" type="text"/>
	<param name="_post/phone" type="text"/>
	<param name="_post/fax" type="text"/>
        <param name="//right_now" type="text"/>
    </params>
    <sql>
        INSERT INTO uplink_location_address 
		(location_address_id,account_id,name, address_line_1, address_line_2, city, state, zip,phone,fax,creation_datetime) 
		VALUES (_AUTO_,?,?,?,?,?,?,?,?,?,?)
    </sql>
</query>
