<!DOCTYPE query SYSTEM "__default_table_names__.txt">
<query name="delete_asset_category">
    <connection>&ifp_connection;</connection>
    <params>
		<param name="php:date('Y-m-d H:i:s', mktime(date('H'), date('i'), date('s')-1, date('m'), date('d'), date('Y')))" type="timestamp"/>
        <param name="_get/equipment_category_id" type="text"/>
		        <param name="runtime/utdate" type="timestamp"/>
	</params>
    <sql>
        UPDATE &ifp_equipment;_category SET deletion_datetime=?
		WHERE equipment_category_id=?
		
		AND deletion_datetime &gt; ?
    </sql>
</query>
