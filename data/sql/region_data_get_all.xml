<!DOCTYPE query SYSTEM "__default_table_names__.txt">
<query name="get_all_region_data">
    <connection>&ifp_connection;</connection>
    <params>
        <param name="runtime/utdate" type="text"/>
        <param name="runtime/utdate" type="text"/>
        <param name="runtime/utdate" type="text"/>
    </params>
    <sql>
        SELECT 
		&ifp_location_region;.region_id, 
        uplink_region.region_name,
		uplink_locations.location_id, 
        uplink_locations.name
		
		FROM uplink_locations
		
		LEFT JOIN &ifp_location_region;
		ON &ifp_location_region;.location_id=uplink_locations.location_id
		AND &ifp_location_region;.deletion_datetime &gt; ?
		
		LEFT JOIN uplink_region
		ON uplink_region.region_id=&ifp_location_region;.region_id
		AND uplink_region.deletion_datetime &gt; ?
		
		
		WHERE 
		uplink_locations.deletion_datetime &gt; ?
		
		ORDER BY uplink_region.region_id DESC
    </sql>
</query>
