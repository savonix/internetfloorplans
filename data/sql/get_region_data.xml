<!DOCTYPE query SYSTEM "__default_table_names__.txt">
<query name="get_region_data">
    <connection>uplink</connection>
    <params>
        <param name="_get/region_id" type="text"/>
        <param name="_get/region_id" type="text"/>
        <param name="php:date('Y-m-d H:i:s')" type="text"/>
        <param name="php:date('Y-m-d H:i:s')" type="text"/>
		<param name="php:$_SESSION['NX_AUTH']['account_id']" type="text"/>
	</params>
    <sql>
        SELECT uplink_region.region_name, location_address_id FROM uplink_region, uplink_location_region 
		WHERE uplink_region.region_id=? AND uplink_location_region.region_id=?
		AND uplink_region.deletion_datetime &gt; ?
		AND uplink_location_region.deletion_datetime &gt; ?
		AND uplink_region.account_id=?
    </sql>
</query>
