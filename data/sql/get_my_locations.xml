<query name="get_all_locations">
    <connection>uplink</connection>
    <params>
        <param name="//last_database_update" type="text"/>
		<param name="php:$_SESSION['NX_AUTH']['account_id']" type="text"/>
		<param name="php:$_SESSION['NX_AUTH']['user_id']" type="text"/>
        <param name="//last_database_update" type="text"/>
	</params>
    <sql>
        SELECT * FROM uplink_location_address, uplink_user_location 
		WHERE uplink_location_address.deletion_datetime &gt; ?
		AND uplink_location_address.account_id=?
		AND uplink_user_location.user_id=?
		AND uplink_user_location.deletion_datetime &gt; ?
		AND uplink_location_address.location_address_id=uplink_user_location.location_address_id
    </sql>
</query>
