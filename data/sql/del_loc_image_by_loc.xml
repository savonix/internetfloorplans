<!DOCTYPE query SYSTEM "__default_table_names__.txt">
<query name="delete_location_image_by_loc">
    <connection>&ifp_connection;</connection>
    <params>
        <param name="php:date('Y-m-d H:i:s', mktime(date('H'), date('i'), date('s')-1, date('m'), date('d'), date('Y')))" type="text"/>
		<param name="php:$_SESSION['NX_AUTH']['account_id']" type="text"/>
		<param name="_post/location_id" type="text"/>
    </params>
    <sql>
        UPDATE uplink_location_images
		SET deletion_datetime=? WHERE account_id=? AND location_id=?
    </sql>
</query>
