<!DOCTYPE query SYSTEM "__default_table_names__.txt">
<query name="get_all_locations">
    <connection>&ifp_connection;</connection>
    <params>
		<param name="//last_database_update" type="text"/>
		<param name="php:$_SESSION['NX_AUTH']['account_id']" type="text"/>
		<param name="php:$_SESSION['NX_AUTH']['account_id']" type="text"/>
		<param name="//my_region_id" type="integer"/>
		<param name="//_get/sort" type="integer" default="uplink_location_address.name"/>
		<param name="//_get/start" type="integer" default="0"/>
		<param name="//_get/incr" type="integer" default="100"/>
	</params>
    <sql>
		
		SELECT
		uplink_location_address.*
		
		FROM uplink_location_address, uplink_location_region
	
		WHERE uplink_location_address.deletion_datetime &gt; ?  
		AND uplink_location_address.account_id=?
		AND uplink_location_region.account_id=?
		AND uplink_location_region.region_id=?
		AND uplink_location_region.location_address_id=uplink_location_address.location_address_id
		GROUP BY uplink_location_address.name
		
		ORDER BY ? ASC
		LIMIT ?,? 
    </sql>
</query>
