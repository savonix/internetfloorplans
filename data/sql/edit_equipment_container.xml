<!DOCTYPE query SYSTEM "__default_table_names__.txt">
<query name="edit_equipment_container" loop="//_post/equipment_type_container_id">
    <connection>savonix</connection>
    <params>
		<param name="_post/priority_id" type="text"/>
        <param name="_post/lob_id" type="integer"/>
		<param name="_post/equipment_id" type="integer"/>
        <param array="//_post/equipment_type_container_id" type="integer"/>
		<param name="php:$_SESSION['NX_AUTH']['account_id']" type="text"/>
	</params>
    <sql>
        UPDATE uplink_equipment_container SET priority_id=?, business_line_id=? WHERE equipment_id=?
		AND equipment_type_container_id=?
		AND account_id=?
    </sql>
</query>
