<!DOCTYPE query SYSTEM "__default_table_names__.txt">
<query name="get_image_pointers_by_id" loop="get_equipment_content/content_id">
    <connection>savonix</connection>
    <params>
        <param array="//get_equipment_content/content_id" type="text"/>
		<param name="php:$_SESSION['NX_AUTH']['account_id']" type="text"/>
		<param name="php:date('Y-m-d H:i:s')" type="text"/>
        <param array="//get_equipment_content/content_id" type="text"/>
		<param name="php:date('Y-m-d H:i:s')" type="text"/>
        <param array="//get_equipment_content/equipment_type_container_id" type="text"/>
	</params>
    <sql>
        SELECT DISTINCT upsell_content.image_pointer, upsell_content.thumb_pointer, upsell_content.mime_type, uplink_equipment_content.equipment_type_container_id 
		
		FROM upsell_content, uplink_equipment_content
		
		WHERE upsell_content.content_id = ?
		AND upsell_content.account_id=? 
		AND upsell_content.deletion_datetime &gt; ?
		AND uplink_equipment_content.content_id=?
		AND uplink_equipment_content.deletion_datetime &gt; ?
		AND uplink_equipment_content.equipment_type_container_id=?
    </sql>
</query>
