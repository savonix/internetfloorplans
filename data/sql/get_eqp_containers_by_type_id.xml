<!DOCTYPE query SYSTEM "__default_table_names__.txt">
<query name="get_container_by_type_id">
    <connection>savonix</connection>
    <params>
        <param name="php:$_SESSION['NX_AUTH']['account_id']" type="text"/>
		<param name="//_get/equipment_type_id|//get_asset_by_id/equipment_type_id|//_post/equipment_type_id" type="text"/>
        <param name="php:date('Y-m-d H:i:s')" type="text"/>
        <param name="php:date('Y-m-d H:i:s')" type="text"/>
	</params>
    <sql>
        SELECT uplink_equipment_type_container.*, uplink_container.name as container_name, uplink_container.width, uplink_container.height
		
		FROM uplink_equipment_type_container, uplink_container 
		
		
		
		WHERE uplink_equipment_type_container.account_id=?
		AND uplink_equipment_type_container.equipment_type_id=?
		AND uplink_equipment_type_container.deletion_datetime &gt; ?
		AND uplink_equipment_type_container.container_id=uplink_container.container_id
		AND uplink_container.deletion_datetime &gt; ?
    </sql>
</query>
