<!DOCTYPE query SYSTEM "__default_table_names__.txt">
<query name="get_all_locations">
    <connection>&ifp_connection;</connection>
    <params>
        <param name="last_database_update" type="text"/>
		<param name="account_id" type="text"/>
		<param name="//_post/q" type="text"/>
		<param name="//_post/q" type="text"/>
		<param name="//_post/q" type="text"/>
		<param name="//_get/start" type="integer" default="0"/>
		<param name="//incr" type="integer" default="100"/>
	</params>
    <sql>
        SELECT
		uplink_location_address.*
		
		FROM uplink_location_address
		
		WHERE uplink_location_address.deletion_datetime &gt; ?  
		AND uplink_location_address.account_id=?
		AND (uplink_location_address.name LIKE ? OR uplink_location_address.address_line_1 LIKE ? OR uplink_location_address.city LIKE ?)  
		GROUP BY uplink_location_address.name
		
		ORDER BY uplink_location_address.name ASC
		LIMIT ?,? 
    </sql>
</query>
