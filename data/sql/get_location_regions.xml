<!DOCTYPE query SYSTEM "__default_table_names__.txt">
<query name="get_location_regions">

    <connection>uplink</connection>
    <params>
        <param name="_get/location_address_id" type="text"/>
		<param name="php:$_SESSION['NX_AUTH']['account_id']" type="text"/>
		<param name="//last_database_update" type="text"/>
		<param name="//last_database_update" type="text"/>
	</params>
	
    <sql>
        SELECT uplink_region.region_id FROM uplink_location_region, uplink_region WHERE uplink_location_region.location_address_id = ?
		AND uplink_location_region.account_id=? 
		AND uplink_location_region.deletion_datetime &gt; ?
		AND uplink_location_region.region_id=uplink_region.region_id
		AND uplink_region.deletion_datetime &gt; ?
    </sql>
    
</query>
